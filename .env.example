
# === Help Scout OAuth ===
HELPSCOUT_CLIENT_ID=your_client_id
HELPSCOUT_CLIENT_SECRET=your_client_secret
HELPSCOUT_REDIRECT_URI=http://localhost:8000/oauth/callback
HELPSCOUT_WEBHOOK_SECRET=replace_me # optional verification

# Scope notes: docs/help scout recommend scopes for conversations, mailbox, etc.
HELPSCOUT_SCOPES=conversations.read mailboxes.read customers.read

# === OpenAI ===
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini # or gpt-4.1-mini

# === Postgres ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=qa_auditor
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/qa_auditor

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === API & App Config ===
PUBLIC_API_BASE=http://localhost:8001
API_BASE=http://api:8000
HELPSCOUT_MAILBOX_ALLOWLIST=
ENV=dev
BACKEND_PORT=8001
STREAMLIT_PORT=8502